<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- weight in sale report -->
    <template id="package_report_saleorder_document" inherit_id="sale.report_saleorder_document">
        <xpath expr="//table/thead/tr[1]/th[3]" position="after">
            <th class="text-center">Product Package</th>
        </xpath>
        <xpath expr="//table//tbody//tr[1]//td[3]" position="after">
            <td class="text-center">
                <span class="text-end" t-field="line.product_packaging_id"/>
            </td>
        </xpath>
    </template>

    <template id="report_invoice_discount_inherit" inherit_id="account.report_invoice_document">
        <xpath expr="//table[@name='invoice_line_table']/thead/tr/th[5]" position="before">
            <th class="text-right">
                <strong>Product Package</strong>
            </th>
        </xpath>
        <xpath expr="//tbody[hasclass('invoice_tbody')]/t/tr/t[1]/td[5]" position="before">
            <t t-if="line.product_packaging_id">
                <td class="text-center">
                    <span t-field="line.product_packaging_id"/>
                </td>
            </t>
            <t t-else="">
                <td></td>
            </t>
        </xpath>
    </template>
</odoo>