<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_move_form_package_inherit" model="ir.ui.view">
        <field name="name">account.move.line.form.package</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='price_unit']" position="before">
                <field name="product_packaging_id" domain="[('product_id', '=', product_id)]"/>
            </xpath>

            <xpath expr="//field[@name='line_ids']//form//field[@name='account_id']" position="after">
                <field name="product_packaging_id" invisible="1"/>
            </xpath>

        </field>
    </record>
</odoo>