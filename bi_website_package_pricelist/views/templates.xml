<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<template id="product_website_package" name="Product Website Package" inherit_id="website_sale.product">
		<xpath expr="//div[@id='o_wsale_cta_wrapper']" position="after">
			<div t-if="packaging" id="product_packaging">
				<div class="card" id="packaging_product" style="border:0px;">
					<ul class="list-group">
						<t t-foreach="packaging" t-as="package">

							<li class="list-group-item o_packaging_select" style="border:0px;">
								<input class="package_pricelist" t-att-value="package.qty" t-att-id="package.id" type="radio" name="package_type"/>
								<label class="label-optional" t-field="package.name"/>
							</li>
						</t>
					</ul>
					<label class="form-label d-none pricelist_price_Label mt-2" for='pricelist_price_Label'>Price</label>
					<input class="form-control priceslist_price w-25 d-none" id="priceslist_price" readonly="1" type="number"/>
				</div>
			</div>
		</xpath>
	</template>

	<template id="cart_lines_inherit" name="Shopping Cart Lines" inherit_id="website_sale.cart_lines">
		<xpath expr="//thead" position="replace">
			<tr>
				<th class="td-img">Product</th>
				<th></th>
				<th class="text-center td-pack">Package</th>
				<th class="text-center td-qty">
					<t t-if="show_qty">Quantity</t>
				</th>
				<th class="text-center td-price">Price</th>
				<th class="text-center td-action"></th>
			</tr>
		</xpath>
		<xpath expr="//td[hasclass('td-product_name')]" position="after">
			<td class='td-pack'>
				<div>
					<span t-field="line.product_packaging_id"/>
				</div>
			</td>
		</xpath>
	</template>
</odoo>