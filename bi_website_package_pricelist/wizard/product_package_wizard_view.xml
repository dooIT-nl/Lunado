<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="product_package_wizard_form" model="ir.ui.view">
		<field name="name">Product Package</field>
		<field name="model">product.package.wizard</field>
		<field name="arch" type="xml">
			<form>
				<group>
					<group>
						<field name="product_tmpl_id"/>
						<field name="package_selection" widget="radio"/>
					</group>
				</group>
				<footer>
					<button name="add_product_package" type="object" string="Ok" class=" oe_highlight"/>
					<button string="Cancel" class="btn-secondary" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>
	<record id="action_product_package_wizard" model="ir.actions.act_window">
		<field name="name">Select Product Package</field>
		<field name="res_model">product.package.wizard</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>
</odoo>