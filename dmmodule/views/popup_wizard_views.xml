<odoo>
    <record id="view_popup_wizard_form" model="ir.ui.view">
        <field name="name">popup_wizard.form</field>
        <field name="model">popup_wizard</field>
        <field name="arch" type="xml">
            <form>
                <p class="text-left">
                    <field name="message" readonly="True"/>
                </p>
                <footer>
                    <button string="Close" type="object" name="close_popup" class="btn-primary" />

                </footer>
            </form>
        </field>
    </record>
</odoo>