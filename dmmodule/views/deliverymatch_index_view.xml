<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!--Sales Order Table-->
    <record id="action_dm_modules" model="ir.actions.act_window">
        <field name="res_model">sale.order</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!--Sales
    Order Table-->

    <!-- Products Table -->
    <record id="action_product_view" model="ir.actions.act_window">
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,tree,form,activity</field>
    </record>
    <!-- Products Table -->


    <!--DeliveryMatch
    Deliver Options Table-->
    <record id="default_delivery_options" model="ir.ui.view">
        <field name="name">default.delivery.options</field>
        <field name="model">dm.deliver.options</field>
        <field name="arch" type="xml">
            <tree>
                <field name="carrierName" />
                <field name="serviceLevelName" />
                <field name="serviceLevelDescription" />
                <field name="deliveryDate" />
                <field name="dm_pickup_date" />
                <field name="buyPrice" />
                <field name="price" />
                <field name="shipmentId" />
                <field name="methodId" />
                <field name="checkId" />
                <field name="odooOrderId" />
            </tree>
        </field>
    </record>

    <record id="action_DeliveryMatch_Options" model="ir.actions.act_window">
        <field name="res_model">dm.deliver.options</field>
        <field name="view_id" ref="default_delivery_options" />
        <field name="view_mode">tree,form</field>
    </record>
    <!--DeliveryMatch
    Deliver Options Table-->


    <menuitem id="dm_root_menu" name="DeliveryMatch" />
    <menuitem id="nav_item_sales" parent="dm_root_menu" name="Sales" action="action_dm_modules" />
    <menuitem id="nav_item_products" parent="dm_root_menu" name="Products" action="action_product_view" />
    <!-- <menuitem id="nav_item_deliver_options" parent="dm_root_menu" name="Deliver Options" action="action_DeliveryMatch_Options" /> -->

</odoo>