<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="15" />
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="DeliveryMatch" string="DeliveryMatch"
                    data-key="dmmodule">
                    <h2>Installation and configuration</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-12 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div class="o_setting_box_content">
                                    <p>
                                        <span
                                            style="font-weight: bold !important; color:#71639E !important;">All
                                            fields with a "*" must be filled</span>
                                    </p>

                                    <div class="form-group">
                                        <label class="col-form-label" for="base_url">Base url for
                                            DeliveryMatch</label>
                                        <div class="text-muted">This can be found in the
                                            DeliveryMatch interface for <strong
                                                style="font-weight: bold !important;">Example:
                                            https://api.engine.delmatch.eu/v1</strong>
                                        </div>
                                        <style>input::placeholder {color: #71639e;}</style>
                                        <field name="base_url"
                                            placeholder="Example: https://api.engine.delmatch.eu/v1" />
                                    </div>


                                    <div class="form-group mt-4">
                                        <label class="col-form-label" for="api_key"></label>
                                        <div class="text-muted">Your API key can be found in the
                                            DeliveryMatch interface under the settings 'API Keys'
                                            menu</div>
                                        <field name="api_key" password="True" />
                                    </div>

                                    <div class="form-group mt-4">
                                        <label class="col-form-label" for="client_id"></label>
                                        <div class="text-muted">Your client ID can be found in the
                                            DeliveryMatch interface under the settings 'API Keys'
                                            menu</div>
                                        <field name="client_id" />
                                    </div>

                                    <div class="form-group mt-4">
                                        <label class="col-form-label"
                                            for="delivery_option_preference"></label>
                                        <div class="text-muted">Detail information of the AUTO
                                            shipment options</div>
                                        <field name="delivery_option_preference" />
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>


                    <h2>Custom settings</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">

                            <div class="o_setting_left_pane">
                                <field name="override_length" />
                            </div>

                            <div class="o_setting_right_pane">
                                <label for="override_length" />
                                <div class="text-muted">Detailed information about enableing
                                    specific length per order-item</div>
                            </div>

                            <div class="o_setting_right_pane">
                                <div class="form-group mt-3">
                                    <div class="o_form_label">
                                        Define External warehouses for DeliveryMatch
                                    </div>
                                    <div class="text-muted">
                                        Detailed information about warehouses selection
                                    </div>
                                    <button name="select_warehouses_for_hub"
                                        string="Define external warehouses" type="object"
                                        class="btn btn-secondary"
                                        title="This will inform DeliveryMatch to know if warehouses need to be set as external."
                                        style="text-align:left !important;"
                                    />
                                </div>
                            </div>

                            <div class="form-group mt-3">
                                <div class="o_setting_left_pane">
                                    <field name="sale_order_to_hub" />
                                </div>

                                <div class="o_setting_right_pane">
                                    <label for="sale_order_to_hub" />
                                    <div class="text-muted">
                                        Detailed information...
                                    </div>
                                </div>
                            </div>


                            <div class="form-group mt-3">
                                <div class="o_setting_left_pane">
                                    <field name="so_hide_book_carrier_btn" />
                                </div>

                                <div class="o_setting_right_pane">
                                    <label for="so_hide_book_carrier_btn" />
                                    <div class="text-muted">
                                        Detailed information...
                                    </div>
                                </div>
                            </div>


                            <div class="form-group mt-3">
                                <div class="o_setting_left_pane">
                                    <field name="hide_book_carrier_btn" />
                                </div>

                                <div class="o_setting_right_pane">
                                    <label for="hide_book_carrier_btn" />
                                    <div class="text-muted">
                                        Detailed information...
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>