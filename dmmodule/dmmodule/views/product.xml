<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="product_template_search_view_inherit" model="ir.ui.view">
        <field name="name">product.template.inherited</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">

            <notebook position="inside">
                <page string="DeliveryMatch | Attributes" name="DeliveryMatch">
                    <group string="Dimensions">
                        <field name="dm_length" min="10"/>
                        <field name="dm_width" min="10" />
                        <field name="dm_height" min="10" />
                    </group>
                    <group string="Item identifiers">
                        <field name="dm_sku" />
                        <field name="dm_hscode" />
                        <field name="dm_country_origin" />
                    </group>
                    <group string="Advanced">
                        <field name="dm_is_fragile" />
                        <field name="dm_is_dangerous" />
                        <field name="dm_send_lot_code" />
                        <field name="dm_combinable_in_package" />
                    </group>
                </page>

                <page string="DeliveryMatch | Extra DG information" name="DeliveryMatch" attrs="{'invisible': [('dm_is_dangerous', '=', False)]}">
                    <group string="">
                        <field name="un_number"/>
                        <field name="dg_packing_instruction" />
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>