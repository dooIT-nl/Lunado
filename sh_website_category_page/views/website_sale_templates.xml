<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sh_website_category_page_description" inherit_id="website_sale.products" customize_show="True" name="Category Description">
        <xpath expr="//div[hasclass('products_header')]" position="before">
            <!-- TO HIDE PRODUCT UNTILE SUB CATEGORY -->
            <t t-set="sh_website_categ_page_is_end_product" t-value="True" />
            <t t-if="category and website.sh_website_categ_page_is_end_product">
                <t t-set="product_category" t-value="request.env['product.public.category'].sudo().search([('parent_id','=',category.id)])" />
                <t t-if="product_category">
                    <t t-set="sh_website_categ_page_is_end_product" t-value="False" />
                </t>
            </t>
            <t t-if="not sh_website_categ_page_is_end_product">
                <style>
                    main #wrap .oe_website_sale .products_pager .pagination {
                        display: none !important;
                    }
                </style>
            </t>
            <!-- TO HIDE PRODUCT UNTILE SUB CATEGORY -->
        </xpath>

        <xpath expr="//div[hasclass('o_wsale_products_grid_table_wrapper')]/table" position="attributes">
            <attribute name="t-if">sh_website_categ_page_is_end_product</attribute>
        </xpath>

        <!-- to hide product pager until sub category -->
        <xpath expr="//div[hasclass('o_wsale_products_main_row')]" position="before">
            <section t-if="not website.category_header_style" id="no_category_style">
                <div class="container">
                    <div class="row">
                        <div class="col-md-3" />
                        <div class="col-md-9">
                            <strong>
                                <span t-if="category" t-field="category.name" />
                                <br />
                                <span t-if="category" t-field="category.description" />
                            </strong>
                        </div>
                    </div>
                </div>
            </section>
            <!-- HEADER STYLE -->
            <!--category_dec-with-img-style-1-->
            <section t-if="website.category_header_style and website.category_header_style=='style1' and category" id="sh_category_dec">
                <div class="container">
                    <div t-if="category" class="row sub_category">
                        <div class="col-md-4 col-lg-4 col-sm-4 col-xs-12">
                            <div class="sh_category_inner">
                                <div class="sh_category_img">
                                    <img t-if="category.image_1920" t-attf-src="data:image/gif;base64, #{category.image_1920}" alt="category.name" />
                                    <img t-if="not category.image_1920" src="/sh_website_category_page/static/src/img/default.png" alt="Default Image" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8 col-lg-8 col-sm-8 col-xs-12">
                            <div class="sh_category_detail">
                                <h4 class="sh_category_title">
                                    <span t-if="category.name" t-field="category.name" />
                                </h4>
                                <p class="desc" t-if="category.description" t-field="category.description" />
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!--category_dec-with-img-style-1-->
            <!--category_dec-without-img-style-2-->
            <section t-if="website.category_header_style and website.category_header_style=='style2' and category" id="sh_category_dec">
                <div class="container">
                    <div t-if="category" class="row sub_category">
                        <div t-if="category.name" class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
                            <div class="sh_category_detail">
                                <h4 class="sh_category_title">
                                    <span t-if="category.name" t-field="category.name" />
                                </h4>
                                <p class="desc" t-if="category.description" t-field="category.description" />
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!--category_dec-without-img-style-2-->
            <!--category_dec-background-img-style-3-->
            <section t-if="website.category_header_style and website.category_header_style=='style3' and category" id="sh_content">
                <div class="container">
                    <div t-if="category" class="row">
                        <ul class="caption-style">
                            <li>
                                <a href="#" class="container-profile-dark">
                                    <div class="inner-content">
                                        <div class="sh_rounded_img">
                                            <img t-if="category.image_1920" t-attf-src="data:image/gif;base64, #{category.image_1920}" alt="category.name" />
                                            <img t-if="not category.image_1920" src="/sh_website_category_page/static/src/img/default.png" alt="Default Image" />
                                        </div>
                                        <div class="caption-bg"></div>
                                        <h2>
                                            <span t-if="category" t-field="category.name" />
                                        </h2>
                                        <p class="desc" t-if="category" t-field="category.description" />
                                    </div>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </section>
            <!-- Header Style 4-->
            <section t-if="website.category_header_style and website.category_header_style=='style4' and category" id="sh_website_page_categ_head_style_4">
                <div class="container">
                    <div t-if="category">
                        <div class="img_box">
                            <img t-if="category.image_1920" t-attf-src="data:image/gif;base64, #{category.image_1920}" alt="category.name" />
                            <img t-if="not category.image_1920" src="/sh_website_category_page/static/src/img/default.png" alt="Default Image" />
                            <h1 t-if="category" t-field="category.name" class="categ_header" />
                            <p t-if="category.description" t-field="category.description" class="categ_desc" />
                        </div>
                    </div>
                </div>
            </section>
            <!-- Header Style 4-->
            <!-- Header Style 5-->
            <section t-if="website.category_header_style and website.category_header_style=='style5' and category" id="sh_website_page_categ_head_style_5">
                <div class="container">
                    <div t-if="category">
                        <div class="img_box">
                            <span>Category</span>
                            <h1 t-if="category.name" t-field="category.name" class="categ_header" />
                            <h2 t-if="category.name" t-field="category.name" class="categ_header_1" />
                            <p t-if="category.description" t-field="category.description" class="categ_desc" />
                        </div>
                    </div>
                </div>
            </section>
            <!-- Header Style 5-->
            <!-- Header Style 6-->
            
            <section t-if="website.category_header_style and website.category_header_style=='style6' and category" id="sh_website_page_categ_head_style_6">
                <div class="container">
                    <div>
                        <div class="img_box">
                            <img t-if="category.image_1920" t-attf-src="data:image/gif;base64, #{category.image_1920}" alt="category.name" />
                            <img t-if="not category.image_1920" src="/sh_website_category_page/static/src/img/default.png" alt="Default Image" />
                            <span class="overlay" />
                            <!-- <p t-if="category.description" t-field="category.description" class='categ_desc'/> -->
                            <h1 t-if="category.name" t-field="category.name" />
                        </div>
                    </div>
                </div>
            </section>
            <!-- Header Style 6-->
            <!-- SUB CATEGORY STYLE -->
            <!--category_dec-background-img-style-3-->
            <!--sh_category Sub Category-->
            <t t-if="category">
                <t t-set="product_category" t-value="request.env['product.public.category'].sudo().search([('show_category','=',True),('parent_id','=',category.id)],order ='sequence asc')" />
                <t t-if="product_category">
                    <section t-if="website.sub_category_style and website.sub_category_style == 'style1'" id="sh_category" style="border-bottom: 1px solid #818181;">
                        <div class="container">
                            <div class="row sh_sub_category">
                                <t t-foreach="product_category" t-as="rec">
                                    <div class="col-md-6 col-lg-6 col-sm-12 col-xs-12">
                                        <a t-att-href="'/shop/category/%s' % (rec.id)">
                                            <figure class="sh_effect">
                                                <div class="img_class">
                                                    <img t-if="rec.image_1920" t-attf-src="data:image/gif;base64, #{rec.image_1920}" height="400" alt="rec.name" />
                                                    <img t-if="not rec.image_1920" src="/sh_website_category_page/static/src/img/default.png" alt="Default Image" />
                                                </div>
                                                <figcaption>
                                                    <h2 t-if="rec.name" t-field="rec.name" />
                                                    <span t-if="rec.description" t-field="rec.description" />
                                                </figcaption>
                                            </figure>
                                        </a>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </section>
                </t>
            </t>
            <!-- sh_compan subcategory 2 -->
            <t t-if="category">
                <t t-set="product_category" t-value="request.env['product.public.category'].sudo().search([('show_category','=',True),('parent_id','=',category.id)],order ='sequence asc')" />
                <t t-if="product_category">
                    <section t-if="website.sub_category_style and website.sub_category_style == 'style2'" id="sh_company" style="border-bottom: 1px solid #818181;">
                        <div class="container">
                            <div class="row sub_company">
                                <t t-foreach="product_category" t-as="rec">
                                    <div class="col-lg-3 col-md-4 col-sm-12 col-xs-6">
                                        <div class="main_box">
                                            <div class="img_box">
                                                <div class="img_box_inner">
                                                    <a t-att-href="'/shop/category/%s' % (rec.id)">
                                                        <div class="comp_img">
                                                            <img t-if="rec.image_1920" t-attf-src="data:image/gif;base64, #{rec.image_1920}" alt="rec.name" />
                                                            <img t-if="not rec.image_1920" src="/sh_website_category_page/static/src/img/default.png" alt="Default Image" />
                                                        </div>
                                                        <div class="comp_content">
                                                            <h4 class="title">
                                                                <span t-if="rec.name" t-field="rec.name" />
                                                            </h4>
                                                            <div class="comp_dec">
                                                                <p t-if="rec.description" t-field="rec.description" />
                                                            </div>
                                                        </div>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </section>
                </t>
            </t>
            <!--sh_compan-->
            <!--shop_category_1 sub category 3 -->
            <t t-if="category">
                <t t-set="product_category" t-value="request.env['product.public.category'].sudo().search([('show_category','=',True),('parent_id','=',category.id)],order ='sequence asc')" />
                <t t-if="product_category">
                    <section t-if="website.sub_category_style and website.sub_category_style == 'style3'" id="shop_category_1" style="border-bottom: 1px solid #818181;">
                        <div class="container">
                            <div class="row">
                                <t t-foreach="product_category" t-as="rec">
                                    <div class="col-md-4 col-lg-4 col-sm-12 col-xs-6">
                                        <a t-att-href="'/shop/category/%s' % (rec.id)">
                                            <div class="shop_cate">
                                                <div class="img_box">
                                                    <img t-if="rec.image_1920" t-attf-src="data:image/gif;base64, #{rec.image_1920}" alt="rec.name" />
                                                    <img t-if="not rec.image_1920" src="/sh_website_category_page/static/src/img/default.png" alt="Default Image" />
                                                </div>
                                                <div class="sh_text">
                                                    <h4>
                                                        <span t-if="rec.name" t-field="rec.name" />
                                                    </h4>
                                                </div>
                                                <div class="cate_menu">
                                                    <div class="menu_title">
                                                        <span t-if="rec.name" t-field="rec.name" />
                                                    </div>
                                                    <p class="site_cate" t-if="rec.description" t-field="rec.description" />
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </section>
                </t>
            </t>
            <!--shop_category_1 sub category 4 -->
            <t t-if="category">
                <t t-set="product_category" t-value="request.env['product.public.category'].sudo().search([('show_category','=',True),('parent_id','=',category.id)],order ='sequence asc')" />
                <t t-if="product_category">
                    <section t-if="website.sub_category_style and website.sub_category_style == 'style4'" style="width: 100%; position: relative; border-bottom: 1px solid #818181; padding: 0px 0px 20px; margin-bottom: 25px;">
                        <div class="container">
                            <div class="row chh" style="justify-content: center;">
                                <t t-foreach="product_category" t-as="rec">
                                    <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 col-xs-12">
                                        <a t-att-href="'/shop/category/%s' % (rec.id)">
                                            <p class="sh_gradient">
                                                <span t-if="rec.name" t-field="rec.name" />
                                            </p>
                                        </a>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </section>
                </t>
            </t>
            <!--shop_category_1 sub category 4 -->
            <!--shop_category_1 sub category 5 -->
            <t t-if="category">
                <t t-set="product_category" t-value="request.env['product.public.category'].sudo().search([('show_category','=',True),('parent_id','=',category.id)],order ='sequence asc')" />
                <t t-if="product_category">
                    <section
                        t-if="website.sub_category_style and website.sub_category_style == 'style5'"
                        id="sh_website_page_sub_categ_style_5"
                        style="width: 100%; position: relative; border-bottom: 1px solid #818181; padding: 0px 0px 20px; margin-bottom: 25px;"
                    >
                        <div class="container">
                            <div class="row">
                                <t t-foreach="product_category" t-as="rec">
                                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12" style="margin-bottom: 1.8pc;">
                                        <a t-att-href="'/shop/category/%s' % (rec.id)">
                                            <div class="main_box">
                                                <div class="img_box">
                                                    <img class="img img-fluid" t-if="rec.image_1920" t-attf-src="data:image/gif;base64, #{rec.image_1920}" alt="rec.name" />
                                                    <img class="img img-fluid" t-if="not rec.image_1920" src="/sh_website_category_page/static/src/img/default.png" alt="Default Image" />
                                                </div>
                                                <div class="text_box">
                                                    <div class="text_text">
                                                        <h3 t-if="rec.name" t-field="rec.name" />
                                                        <p t-if="rec.description" t-field="rec.description" class="description" />
                                                        <button class="btn btn-primary">
                                                            <i class="fa fa-long-arrow-right" />
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </section>
                </t>
            </t>
            <!--shop_category_1 sub category 5 -->
            <!--shop_category_1 sub category 6 -->
            <t t-if="category">
                <t t-set="product_category" t-value="request.env['product.public.category'].sudo().search([('show_category','=',True),('parent_id','=',category.id)],order ='sequence asc')" />
                <t t-if="product_category">
                    <section
                        t-if="website.sub_category_style and website.sub_category_style == 'style6'"
                        id="sh_website_page_sub_categ_style_6"
                        style="width: 100%; position: relative; border-bottom: 1px solid #818181; padding: 0px 0px 20px; margin-bottom: 25px;"
                    >
                        <div class="container">
                            <div class="row">
                                <t t-foreach="product_category" t-as="rec">
                                    <div class="col-lg-3 col-md-6 col-sm-12 col-xs-12" style="margin-bottom: 1.8pc;">
                                        <a t-att-href="'/shop/category/%s' % (rec.id)">
                                            <div class="main_box">
                                                <div class="inner-box">
                                                    <div class="image-box">
                                                        <div class="img_box">
                                                            <img class="img img-fluid" t-if="rec.image_1920" t-attf-src="data:image/gif;base64, #{rec.image_1920}" alt="rec.name" />
                                                            <img class="img img-fluid" t-if="not rec.image_1920" src="/sh_website_category_page/static/src/img/default.png" alt="Default Image" />
                                                        </div>
                                                    </div>
                                                    <div class="overlay-box" t-if="rec.description">
                                                        <p t-if="rec.description" t-field="rec.description" class="description" />
                                                    </div>
                                                    <div class="lower-content">
                                                        <div class="inner">
                                                            <h4 t-if="rec.name" t-field="rec.name" />
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </section>
                </t>
            </t>
            <!--shop_category_1 sub category 6 -->
            <!--shop_category_1 sub category 7 -->
            <t t-if="category">
                <t t-set="product_category" t-value="request.env['product.public.category'].sudo().search([('show_category','=',True),('parent_id','=',category.id)],order ='sequence asc')" />
                <t t-if="product_category">
                    <section
                        t-if="website.sub_category_style and website.sub_category_style == 'style7'"
                        id="sh_website_page_sub_categ_style_7"
                        style="width: 100%; position: relative; border-bottom: 1px solid #818181; padding: 0px 0px 20px; margin-bottom: 25px;"
                    >
                        <div class="container">
                            <div class="row">
                                <t t-foreach="product_category" t-as="rec">
                                    <div class="col-lg-4 col-md-6 col-sm-12" style="margin-bottom: 1.8pc;">
                                        <a t-att-href="'/shop/category/%s' % (rec.id)">
                                            <div class="main_box">
                                                <div class="img_box">
                                                    <img class="img img-fluid" t-if="rec.image_1920" t-attf-src="data:image/gif;base64, #{rec.image_1920}" alt="rec.name" style="width: 100%; height: 100%;" />
                                                    <img class="img img-fluid" t-if="not rec.image_1920" src="/sh_website_category_page/static/src/img/default.png" alt="Default Image" style="width: 100%; height: 100%;" />
                                                </div>
                                                <div class="text_box">
                                                    <div class="text_box_inner">
                                                        <div class="text_box_inner_1"></div>
                                                    </div>
                                                    <h5 class="text_title" t-if="rec.name" t-field="rec.name" />
                                                    <div class="text_desc">
                                                        <p t-if="rec.description" t-field="rec.description" class="description" />
                                                    </div>
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </section>
                </t>
            </t>
            <!--shop_category_1 sub category 7 -->
        </xpath>
    </template>
    
    
</odoo>
